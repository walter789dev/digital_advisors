---
import "../styles/global.css";
import PreFooter from "../components/footer/PreFooter.astro";
import Layout from "../layouts/Layout.astro";
import HeroImage from "../components/ui/HeroImage.astro";
---

<Layout title="Servicios">
  <HeroImage
    title="Nuestro servicios"
    description="Presentamos los resultados del análisis de manera clara y concisa mediante informes personalizados y visualizaciones de datos interactivas."
  />
  <div class="servicesContainer">
    <div class="serviceCard">
      <div class="serviceCard__icon">
        <svg
          width="40"
          height="40"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#fff"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
