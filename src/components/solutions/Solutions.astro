    <SolutionItem
      title="Marketing digital"
      description="Estrategias para potenciar la presencia online, mejorar el posicionamiento y atraer más clientes."
    >
      <svg
        slot="icon-logo"
        viewBox="0 0 24 24"
        fill="none"
        stroke-width="1"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="size-12 stroke-(--primary-color)"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
          d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
          d="M17 17h-11v-14h-2"></path><path d="M6 5l14 1l-1 7h-13"></path></svg
      >
    </SolutionItem>
  </section>
</section>

<script>
  const div = document.getElementById("miDiv");
  let options = {
    threshold: 0.2,
  };

  if (div !== null) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          div.classList.add("tracking-in-expand-forward-bottom");
          observer.unobserve(div);
        }
      });
    }, options);

    observer.observe(div);
  }
</script>
