---
import Button from "../ui/Button.astro";
import Imagen from '../../assets/images/preFooter.webp'
import { Image } from "astro:assets";
---

<div class="preFooterContainer">
    <div class="absolute size-full">
        <Image class="size-full object-cover" src={Imagen} alt="Fondo" />
    </div>
  <h3 class="preFooter__titulo responsive-h2">Cont치ctanos</h3>
  <p class="preFooter__descripcion responsive-text">
    Obtenga m치s informaci칩n sobre nuestras servicios y soluciones.
  </p>
  <Button text="Contactanos" />
</div>

<style>
  .preFooterContainer {
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    height: 240px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .preFooterContainer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(
      0,
      0,
      0,
      0.5
    ); /* cambia el 0.5 por m치s o menos opacidad */
    z-index: 1;
  }

  p,
  h3 {
    z-index: 2;
    color: white;
  }

  .preFooter__descripcion {
    text-align: center;
    margin: 20px;
  }

  @media (min-width: 1024px) {
    .preFooterContainer {
      height: 300px;
    }
  }
</style>
